// Config
vendor-prefixes = webkit moz ms official

// Colors
color-default = #555
color-grey = #999
color-border = #ddd
color-link = #258fb8
color-background = #eee
color-widget-background = #ddd
color-widget-border = #ccc
color-footer-background = #262a30
color-mobile-nav-background = #191919
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

// Fonts
font-sans = PingFang-SC-Regular,Helvetica Neue,Helvetica,Microsoft Yahei,sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-size = 16px
line-height = 1.5em
line-height-title = 1.1em

// Header
logo-size = 40px
banner-height = 300px
banner-url = "images/banner.jpg"

// Layout
block-margin = 50px
article-padding = 60px
main-column = 9

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column 

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"