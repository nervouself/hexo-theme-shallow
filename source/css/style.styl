@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

#container
  min-height: 100%

#main
  clearfix()
  padding-bottom: (banner-height + block-margin / 10)

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width * 4
  margin: 0 auto
  padding: 0 gutter-width
  @media mq-mobile
    padding: 0 (gutter-width / 4)

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative
  transition: 0.2s ease-out
  z-index: 1
  background: color-background

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
