.popup
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 101
  background: rgba(0,0,0,.7)
  display: none

.close-pop
  transition: .2s ease-out
  position: absolute
  top: 20px
  right: 20px;
  z-index: 103
  box-sizing: content-box
  width: 40px
  height: 40px
  background: #000
  border: 2px solid #fff
  border-radius: 10px
  cursor: pointer
  opacity: .2
  &:before, &:after
    content: ""
    display: inline-block
    position: absolute
    top:50%;
    left:50%;
    background: #fff
    transform: translate(-50%,-50%) rotateZ(45deg);
    border-radius: 3px;
  &:before
    width: 4px
    height: 40px
  &:after
    width: 40px
    height: 4px
  &:hover
    opacity: .5
    
.lightbox
  width: 100%
  height: 100%
  overflow: auto

.lightbox > *
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 102
  margin: auto
  max-height: 90%
  @media screen and (min-width: 1024px)
    max-width: 100%
    max-height: 100%
