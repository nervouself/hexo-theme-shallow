.popup
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 101
  background: rgba(0,0,0,.7)
  display: none

.close-pop
  transition: .2s ease-out
  position: absolute
  top: 20px
  right: 20px;
  z-index: 103
  box-sizing: content-box
  width: 50px
  height: 50px
  border: 1px solid #eee
  border-radius: 10px
  cursor: pointer
  opacity: .2
  &:before, &:after
    content: ""
    display: inline-block
    position: absolute
    top:50%;
    left:50%;
    background: #eee
    transform: translate(-50%,-50%) rotateZ(45deg);
    border-radius: 3px;
  &:before
    width: 6px
    height: 50px
  &:after
    width: 50px
    height: 6px
  &:hover
    opacity: .5
    
.lightbox
  position: absolute
  width: 100%
  height: 100%

.lightbox > *
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%,-50%)
  z-index: 102
  max-width: 100%
  max-height: 100%