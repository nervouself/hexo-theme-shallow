.article
  margin: block-margin 0

.article-inner
  @extend $block
  overflow: hidden

.header-meta
  margin-bottom: 5px
  font-size: 0.85em
  color: #ccc

.article-footer
  clearfix()
  font-size: 0.85em
  line-height: line-height
  background: #fafafa
  border-top: 1px solid color-border
  padding: (article-padding/2) article-padding
  display: flex
  @media mq-mobile
    padding: (article-padding/3)

.article-tag-list
  flex:1

.article-tag-list-item
  float: left
  margin-right: 10px
  @media mq-normal
    margin: 10px
    margin-left: 0

.article-tag-list-link
  color: color-grey
  text-decoration: none
  transition: color 0.2s ease-out
  &:before
    content: "#"
  &:hover
    color: color-default

.article-category-list
  float: left
  margin-right: 10px
  @media mq-normal
    margin: 10px
    margin-left: 0

.article-category-list-link
  text-decoration: none
  color: color-grey
  transition: color 0.2s ease-out
  &:before
    content: ">"
  &:hover
    color: color-orange

.article-header
  margin: article-padding
  @media mq-mobile
    margin: (article-padding/3)

.article-title
  text-decoration: none
  font-size: 2em
  color: color-default
  line-height: line-height-title
  transition: color 0.2s ease-out
  a&:hover
    color: color-link

.article-entry
  @extend $base-style
  color: color-default
  padding: 0 article-padding article-padding
  @media mq-mobile
    padding: 0 (article-padding/3)
  p, table
    line-height: line-height
    margin: line-height 0
  h1, h2, h3, h4, h5, h6
    line-height: line-height-title
    margin: line-height-title 0
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    margin-top: line-height
    margin-bottom: line-height
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: bold
    border-bottom: 3px solid color-border
    padding-bottom: 0.5em
  td
    border-bottom: 1px solid color-border
    padding: 10px 0
  blockquote
    font-family: font-serif
    font-size: 1.4em
    margin: line-height 20px
    text-align: center
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

.article-more-link
  display: inline-block
  padding: 10px 20px
  border: 1px solid #bbb
  border-radius: 3px
  background-color: #ccc
  transition: background-color 0.2s ease-out
  color: #fff;
  text-decoration: none
  float: right
  &:hover
    background: color-orange

#article-nav
  clearfix()
  position: relative
  @media mq-normal
    margin: block-margin 0
    &:before
      absolute-center(8px)
      content: ""
      border-radius: 50%
      background: color-border
      box-shadow: 0 1px 2px #fff

.article-nav-link-wrap
  text-decoration: none
  text-shadow: 0 1px #fff
  color: color-grey
  box-sizing: border-box
  margin-top: block-margin
  text-align: center
  display: block
  &:hover
    color: color-default
  @media mq-normal
    width: 50%
    margin-top: 0

#article-nav-newer
  @media mq-normal
    float: left
    text-align: right
    padding-right: 20px

#article-nav-older
  @media mq-normal
    float: right
    text-align: left
    padding-left: 20px

.article-nav-caption
  text-transform: uppercase
  letter-spacing: 2px
  color: color-border
  line-height: 1em
  font-weight: bold
  #article-nav-newer &
    margin-right: -2px

.article-nav-title
  font-size: 0.85em
  line-height: line-height
  margin-top: 0.5em
