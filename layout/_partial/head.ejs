<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="keywords" content="nervouself,ShiLei,shilei,时磊,博客,前端" />
  <meta name="description" content="<% if (page.excerpt){ %><%= strip_html(page.excerpt) %> | <% } %><%= config.description %>" />
  <%
  var title = page.title;

  if (is_archive()){
    title = __('archive');

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = __('category') + ': ' + page.category;
  } else if (is_tag()){
    title = __('tag') + ': ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <% if (theme.favicon){ %>
  <link rel="shortcut icon" href="<%- theme.favicon %>">
  <% } %>
  <%- css('css/style') %>
</head>
